{
  "name": "project-janatha",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@janatha/backend\" \"npm run dev --workspace=@janatha/frontend\"",
    "build": "npm run build --workspaces",
    "backend": "npm run dev --workspace=@janatha/backend",
    "frontend": "npm run dev --workspace=@janatha/frontend",
    "deploy": "bash infrastructure/scripts/deploy.sh",
    "amplify": "amplify"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.21",
    "leaflet": "^1.9.4",
    "react-leaflet": "^5.0.0",
    "react-native-css-interop": "^0.2.1",
    "react-native-reanimated": "~3.16.1",
    "react-native-worklets-core": "^1.6.2",
    "tailwindcss": "^3.4.19"
  }
}
