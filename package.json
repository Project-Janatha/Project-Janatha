{
  "name": "project-janatha",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=@janatha/backend\" \"npm run dev --workspace=@janatha/frontend\"",
    "build": "npm run build --workspaces",
    "backend": "npm run dev --workspace=@janatha/backend",
    "frontend": "npm run dev --workspace=@janatha/frontend",
    "deploy": "bash infrastructure/scripts/deploy.sh",
    "amplify": "amplify"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
